<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <h1>User info</h1>
            <%= form_with model: @user, method: :PATCH do |f| %>
                <%= render "devise/shared/error_messages", resource: @user %>
                
                <div class="form-group">
                    <label>Name</label><br />
                    <%= f.text_field :name, autofocus: true, placeholder:"Name" %>
                </div>
                
                <div class="form-group">
                    <label>Image</label><br />
                    <%= f.file_field :profile_image, accept: "image/*" %>
                </div>
                
                <div class="form-group">
                    <label>Introduction</label><br />
                    <%= f.text_area :introduction, placeholder:"Introduction" %>
                </div>
                
                <div class="actions">
                    <%= f.submit "Update User", class: 'btn btn-secondary' %>
                </div>
            <% end %>
        </div>
    </div>
</div>
