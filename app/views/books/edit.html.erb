<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <h1>Editing Book</h1>
            
            <%= render 'shared/error_message' %>
            
            <%= form_with model: @book, method: :PATCH do |f| %>
                <div class="form-group">
                    <label>Title</label><br />
                    <%= f.text_field :title, autofocus: true, placeholder:"Title", class:"form-control" %>
                </div>
                
                <div class="form-group">
                    <label>Opinion</label><br />
                    <%= f.text_area :body, placeholder:"Opinion", class:"form-control" %>
                </div>
                
                <div class="form-group">
                    <%= f.submit "Update Book", class: 'btn btn-success' %>
                </div>
            <% end %>
            
            <%= link_to "Show", book_path(@book.id) %>
            |
            <%= link_to "Back", books_path %>
        </div>
    </div>
</div>
