<div class="container px-5 px-sm-0">
    <div class="row">
        
        <%= render 'share/user_form', user: @user %>
        
        <div class="col-md-8 offset-md-1">
            <h1>Book detail</h1>
            <table class="table">
                <tbody>
                    <tr>
                        <td>
                            <%= image_tag @book.user.get_profile_image(75, 75) %><br/>
                            <%= link_to "#{@user.name}", user_path(@user.id) %>
                        </td>
                        <td>
                            <%= @book.title %>
                        </td>
                        <td>
                            <%= @book.body %>
                        </td>
                        <% if @user == current_user %>
                            <td>
                                <%= link_to "Edit", edit_book_path(@book.id), class: 'btn btn-success' %>
                            </td>
                            <td>
                                <%= link_to "Destroy", book_path(@book.id), 
                                method: :delete, "data-confirm"=> "本当に削除しますか？",
                                class: 'btn btn-danger' %>
                            </td>
                        <% end %>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
