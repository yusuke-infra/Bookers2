<div class="container px-5 px-sm-0">
    <div class="row">
        
        <%= render 'form', user: @user %>
        
        <div class="col-md-8 offset-md-1">
            <h1>Book detail</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th></th>
                        <th>Title</th>
                        <th>Opinion</th>
                        <th colspan="3"></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <%= image_tag @book.user.get_profile_image(75, 75) %><br/>
                            <%= link_to "#{@user.name}", user_path(@user.id) %>
                        </td>
                        <td>
                            <%= @book.title %>
                        </td>
                        <td>
                            <%= @book.body %>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
